<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/listcard"
    android:layout_marginLeft="@dimen/default_card_margin_side"
    android:layout_marginStart="@dimen/default_card_margin_side"
    android:layout_marginEnd="@dimen/default_card_margin_side"
    android:layout_marginRight="@dimen/default_card_margin_side"
    android:layout_marginTop="@dimen/default_card_margin"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="false"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/touch_selector"
    >

    <LinearLayout
        android:id="@+id/list_item_stock_quote"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/material_default_padding"
        android:paddingRight="@dimen/material_default_padding"
        android:paddingStart="@dimen/material_default_padding"
        android:paddingEnd="@dimen/material_default_padding">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/default_name_textsize"/>
            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                tools:text="GOOG"
                android:textColor="@color/grey"
                android:textSize="@dimen/default_symbol_textsize"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/default_price_textsize"
                android:textColor="@color/black"
                tools:text="1000.00"
                />
            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100%"
                android:textColor="@color/white"
                android:textSize="@dimen/default_change_textsize"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
